<%= form_with url: npq_separation_admin_finance_statements_path, method: :get, class: 'app-statement-selector' do |f| %>
  <%= f.govuk_collection_select :lead_provider_id,
    lead_providers,
    :id,
    :name,
    label: { text: "View a different provider" },
    options: { selected: lead_provider_id, include_blank: "All" },
    form_group: { class: "govuk-form-group govuk-!-width-one-third" }
  %>

  <%= f.govuk_collection_select :cohort_id,
    cohorts,
    :id,
    :start_year,
    label: { text: "View a different cohort" },
    options: { selected: cohort_id, include_blank: "All" },
    form_group: { class: "govuk-form-group govuk-!-width-one-quarter" }
  %>

  <%= f.govuk_collection_select :statement,
    statements,
    :value,
    :name,
    label: { text: "View a different statement" },
    options: { selected: selected_statement },
    form_group: { class: "govuk-form-group govuk-!-width-one-quarter" }
  %>

  <%= f.govuk_submit "View", secondary: true %>
<% end %>
