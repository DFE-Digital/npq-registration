<h1 class="govuk-heading-l">API documentation</h1>

<h2 class="govuk-heading-m">Paths</h2>

<ol class="govuk-list govuk-list--number">
  <% @docs.paths.each do |path| %>
    <li>
      <%= tag.h3(path.name, class: "govuk-heading-s") %>

      <ol class="govuk-list govuk-list--number">
        <% path.verbs.each do |verb| %>
          <li><%= verb.name %></li>
        <% end %>
      </ol>
    </li>
  <% end %>
</ol>
