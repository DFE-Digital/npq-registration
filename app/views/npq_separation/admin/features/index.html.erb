<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">

    <h1 class="govuk-heading-l">Feature flags</h1>

    <table class="govuk-table">

      <thead class="govuk-table__head">
        <tr class="govuk-table__row">
          <th scope="col" class="govuk-table__header">Feature name</th>
          <th scope="col" class="govuk-table__header">Current state</th>
          <th scope="col" class="govuk-table__header"></th>
        </tr>
      </thead>

      <tbody class="govuk-table__body">
      <% @features.each do |feature| %>
        <tr class="govuk-table__row">
          <td class="govuk-table__cell"><%= feature %></td>
          <td class="govuk-table__cell">
            <% if Flipper.enabled?(feature) %>
              <strong class="govuk-tag govuk-tag--green">On</strong>
            <% else %>
              <strong class="govuk-tag govuk-tag--red">Off</strong>
            <% end %>
          </td>
          <td class="govuk-table__cell"><%= govuk_link_to("View", npq_separation_admin_feature_path(feature)) %><span class="govuk-visually-hidden"> <%= feature %></span></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
