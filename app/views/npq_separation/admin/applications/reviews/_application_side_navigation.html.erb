<% content_for :side_navigation do %>
  <%=
    render NpqSeparation::SubNavigationComponent.new(
      request.path,
      structure: [
        NpqSeparation::NavigationStructure::Node.new(
          name: "Application details",
          href: npq_separation_admin_application_review_path(@application),
          prefix: %r{/npq-separation/admin/applications/reviews/\d+$},
          ),
        NpqSeparation::NavigationStructure::Node.new(
          name: "Application history",
          href: npq_separation_admin_applications_reviews_history_path(@application),
          prefix: %r{/npq-separation/admin/applications/reviews/\d+/history$},
          ),
      ],
      )
  %>
<% end %>
