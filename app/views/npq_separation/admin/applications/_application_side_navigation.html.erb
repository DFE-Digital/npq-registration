<% content_for :side_navigation do %>
  <%=
    render NpqSeparation::SubNavigationComponent.new(
      request.path,
      structure: [
        NpqSeparation::NavigationStructure::Node.new(
          name: "Application details",
          href: npq_separation_admin_application_path(@application),
          prefix: %r{/npq-separation/admin/applications/\d+$},
        ),
        NpqSeparation::NavigationStructure::Node.new(
          name: "Declaration details",
          href: npq_separation_admin_application_declarations_path(@application),
          prefix: %r{/npq-separation/admin/applications/\d+/declarations$},
        ),
        NpqSeparation::NavigationStructure::Node.new(
          name: "Course outcome",
          href: npq_separation_admin_applications_outcome_path(@application),
          prefix: %r{/npq-separation/admin/applications/\d+/outcome$},
          ),
        NpqSeparation::NavigationStructure::Node.new(
          name: "Application history",
          href: npq_separation_admin_applications_history_path(@application),
          prefix: %r{/npq-separation/admin/applications/\d+/history$},
          ),
      ],
    )
  %>
<% end %>
