<head>
  <meta charset="utf-8">
  <% if content_for?(:title) %>
    <title><%= content_for(:title) %> - Register for a national professional qualification</title>
  <% else %>
    <title>Register for a national professional qualification</title>
  <% end %>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>
  <%= canonical_tag %>
  <%= tag :meta, name: 'viewport', content: 'width=device-width, initial-scale=1' %>
  <%= tag :meta, property: 'og:image', content: image_path('govuk-opengraph-image.png') %>
  <%= tag :meta, name: 'theme-color', content: '#0b0c0c' %>
  <%= favicon_link_tag image_path('favicon.ico'), type: nil, sizes: "48x48" %>
  <%= favicon_link_tag image_path('favicon.svg'), type: 'image/svg+xml', sizes: "any" %>
  <%= favicon_link_tag image_path('govuk-icon-mask.svg'), type: 'image/svg+xml', rel: 'mask-icon', color: "#0b0c0c" %>
  <%= favicon_link_tag image_path('govuk-icon-180.png'), rel: 'apple-touch-icon', type: 'image/png' %>
  <%= nonced_stylesheet_link_tag 'application', media: 'all' %>
  <%= nonced_javascript_include_tag 'application', defer: true %>

  <%= render partial: "shared/analytics/google" %>

  <% if show_tracking_pixels? && Rails.env.production? %>
    <%= render partial: "shared/analytics/tracking_pixels" %>
  <% end %>

  <%= yield :head %>

  <% if Rails.env.development? %>
    <%= nonced_javascript_tag do %>
      console.log(<%= session.to_json.html_safe %>)
    <% end %>
  <% end %>

  <%= sentry_javascript_tag %>
</head>
