<% if Feature.registration_disabled? %>
  <%=
    govuk_notification_banner(title_text: "Maintenance notice") do |banner|
      banner.with_heading(
        text: "Due to scheduled mainenance taking place soon, new registrations are currently disabled. If you already started your registration, you can continue."
      )
    end
  %>
<% end %>

<% if flash[:error].present? %>
  <%=
    govuk_notification_banner(title_text: (flash[:error_title] || "Error")) do |banner|
      banner.with_heading(text: flash[:error])
    end
  %>
<% end %>

<% if flash[:success] %>
  <%=
    govuk_notification_banner(
      title_text: flash[:success_title] || "Success",
      success: true,
    ) do |banner|
      banner.with_heading(text: flash[:success])
    end
  %>
<% end %>
