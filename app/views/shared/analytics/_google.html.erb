<%# google tag manager snippet based on: https://developers.google.com/tag-platform/security/guides/csp %>
<% if cookies["consented-to-cookies"] == "accept" && Rails.configuration.x.google_analytics_id %>
  <%= nonced_javascript_include_tag "https://www.googletagmanager.com/gtag/js?id=#{ Rails.configuration.x.google_analytics_id }", async: true %>

  <%= nonced_javascript_tag do %>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
    gtag('config', '<%= Rails.configuration.x.google_analytics_id %>');
  <% end %>
<% end %>
