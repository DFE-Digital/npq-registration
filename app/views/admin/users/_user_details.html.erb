<%=
  govuk_summary_list do |sl|
    sl.with_row do |row|
      row.with_key(text: 'ECF ID')
      row.with_value(text: user.ecf_id || govuk_tag(text: "Missing", colour: "red"))
    end

    sl.with_row do |row|
      row.with_key(text: 'Identity Provider')
      row.with_value(text: user.provider ? t("omniauth_providers.#{user.provider}") : "-")
    end

    sl.with_row do |row|
      row.with_key(text: 'Identity UID')
      row.with_value(text: user.uid || '-')
    end

    sl.with_row do |row|
      row.with_key(text: 'In Get an Identity Pilot?')
      row.with_value(text: boolean_red_green_tag(user.get_an_identity_provider?))
    end

    sl.with_row do |row|
      row.with_key(text: 'Email')
      row.with_value(text: user.email)
    end

    sl.with_row do |row|
      row.with_key(text: 'Name')
      row.with_value(text: user.full_name)
    end

    sl.with_row do |row|
      row.with_key(text: 'TRN')
      row.with_value(text: user.trn)
    end

    sl.with_row do |row|
      row.with_key(text: 'TRN validated')
      row.with_value(text: boolean_red_green_tag(user.trn_verified))
    end

    sl.with_row do |row|
      row.with_key(text: 'TRN auto validated')
      row.with_value(text: boolean_red_green_tag(user.trn_auto_verified))
    end
  end
%>
