        end

        summary_list.with_row do |row|
          row.with_key { 'Number of pupils' }
          row.with_value { @school.number_of_pupils || "-" }
        end

        summary_list.with_row do |row|
          row.with_key { 'Created at' }
          row.with_value { l @school.created_at, format: :admin }
        end
      end
    %>
  </div>
</div>
