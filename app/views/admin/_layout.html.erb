<h1 class="govuk-heading-l"><%= title ||= t(".title") %></h1>

<%= render SubnavComponent.new do |component| %>
  <%= component.nav_item(path: admin_path) do %>
    <%= t(".dashboard") %>
  <% end %>

  <%= component.nav_item(path: admin_applications_path) do %>
    <%= t(".applications") %>
  <% end %>

  <%= component.nav_item(path: admin_users_path) do %>
    <%= t(".users") %>
  <% end %>

  <%= component.nav_item(path: admin_unsynced_applications_path) do %>
    <%= t(".unsynced_applications") %>
  <% end %>

  <%= component.nav_item(path: admin_unsynced_users_path) do %>
    <%= t(".unsynced_users") %>
  <% end %>

  <%= component.nav_item(path: admin_schools_path) do %>
    <%= t(".schools") %>
  <% end %>

  <% if current_user.flipper_access? %>
    <%= component.nav_item(path: "/admin/feature_flags") do %>
      <%= t(".feature_flags") %>
    <% end %>
  <% end %>
<% end %>
