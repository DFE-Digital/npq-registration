<% content_for :before_content do %>
  <%= render GovukComponent::BackLinkComponent.new(
    text: "Back",
    href: admin_path
  ) %>
<% end %>

<%= form_for(@user, url: admin_application_email_path(@user), method: "patch") do |f| %>
  <%= f.govuk_error_summary %>

  <%= f.govuk_email_field(
    :email,
    label: { tag: "h1", size: "l", text: "Change #{@user.full_name}'s email address" },
    hint: { text: "Original address: #{@user.email}" },
  )
  %>

  <%= f.govuk_submit %>
<% end %>
