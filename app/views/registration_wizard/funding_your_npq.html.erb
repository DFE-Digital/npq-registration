<% content_for :title do %>
  <%= @form.errors.present? ? "Error: " : nil %><%= @form.title %>
<% end %>

<% content_for :before_content do %>
  <%= render GovukComponent::BackLinkComponent.new(
    text: "Back",
    href: registration_wizard_show_path(@wizard.previous_step_path)
  ) %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_with model: @form, url: registration_wizard_form_url(@form), scope: 'registration_wizard', method: :patch do |f| %>
      <%= f.govuk_error_summary %>

      <% if @wizard.query_store.england_teacher? %>
        <h1 class="govuk-heading-xl"><%= @form.title %></h1>

        <p class="govuk-body">
          Your school or college is not eligible for DfE scholarship funding.
        </p>

        <%= f.govuk_collection_radio_buttons :funding,
          @form.options,
          :value,
          :text,
          :description,
          legend: {
            text: "How is your #{@form.course.name} being paid for?"
          },
          bold_labels: false
        %>
      <% else %>
        <%= f.govuk_collection_radio_buttons :funding,
          @form.options,
          :value,
          :text,
          :description,
          legend: {
            tag: "h1",
            size: "xl",
            text: @form.title,
          },
          bold_labels: false
        %>
      <% end %>

      <%= f.govuk_submit %>
    <% end %>
  </div>
</div>
