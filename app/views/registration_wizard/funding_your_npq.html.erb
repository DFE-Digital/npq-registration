<% content_for :title do %>
  Funding your NPQ
<% end %>

<% content_for :before_content do %>
  <%= render GovukComponent::BackLink.new(
    text: "Back",
    href: registration_wizard_show_path(@wizard.previous_step_path)
  ) %>
<% end %>

<%= form_with model: @form, url: registration_wizard_form_url(@form), scope: 'registration_wizard', method: :patch do |f| %>
  <%= f.govuk_error_summary %>

  <%= f.govuk_collection_radio_buttons :funding,
    @form.options,
    :value,
    :text,
    :description,
    legend: { text: "Funding your NPQ", tag: "h1", size: "xl" },
    hint: { text: "How is your #{@form.course.name} being paid for?" } %>

  <%= f.govuk_submit %>
<% end %>
