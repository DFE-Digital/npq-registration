<% content_for :title do %>
  <%= @form.errors.present? ? "Error: " : nil %>Funding
<% end %>

<% content_for :before_content do %>
  <%= render GovukComponent::BackLink.new(
    text: "Back",
    href: registration_wizard_show_path(@wizard.previous_step_path)
  ) %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_with model: @form, url: registration_wizard_form_url(@form), scope: 'registration_wizard', method: :patch do |f| %>
      <%= f.govuk_error_summary %>

      <h1 class="govuk-heading-xl">Funding</h1>

      <p class="govuk-body">
        Your school or college is not eligible for NPQ government scholarship funding.
      </p>

      <%= f.govuk_collection_radio_buttons :funding,
        @form.options,
        :value,
        :text,
        :description,
        legend: { text: "How is your #{@form.course.name} being paid for?" } %>

      <%= f.govuk_submit %>
    <% end %>
  </div>
</div>
