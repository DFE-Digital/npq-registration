<%=
  form.govuk_text_field(
    question.name,
    width: "full",
    label: form.object.wizard.current_step == :qualified_teacher_check ? { text: question.question_text, size: "m", tag: "h1" } : { text: question.question_text, size: "xl", tag: "h1" }
  )
%>

<% if question.additional_info %>
  <%=
  render(
    "registration_wizard/shared/additional_info",
  )
  %>
<% end %>
