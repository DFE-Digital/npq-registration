<% question_text = t("helpers.label.registration_wizard.#{question.name_locale_key}") %>
<% hint_text =
  t("helpers.hint.registration_wizard.#{question.name_locale_key}", **question.data_attributes, default: nil) ||
    t("helpers.hint.registration_wizard.#{question.name_locale_key}_html", **question.data_attributes).html_safe  %>

<% if question.display_no_javascript_fallback_form? %>
  <%=
    render(
      "registration_wizard/shared/questions/auto_complete_institution/no_js",
      form: form,
      question: question,
      question_text: question_text,
      hint_text: hint_text,
    )
  %>
<% else %>
  <%=
    render(
      "registration_wizard/shared/questions/auto_complete_institution/js",
      form: form,
      question: question,
      question_text: question_text,
      hint_text: hint_text
    )
  %>
<% end %>
