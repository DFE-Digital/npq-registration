<% content_for :title do %>
  <%= form.errors.present? ? "Error: " : nil %>
  <%= form.question.question_text %>
<% end %>

<% content_for :before_content do %>
  <%= render GovukComponent::BackLinkComponent.new(
    text: "Back",
    href: registration_wizard_show_path(wizard.previous_step_path)
  ) %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_with model: form, url: registration_wizard_form_url(form), scope: 'registration_wizard', method: :patch do |f| %>
      <%= f.govuk_error_summary %>
      
      <% if form.wizard.current_step == :qualified_teacher_check %>
      <%=
        concat(
          capture do
            render(
              "registration_wizard/shared/questions/#{form.question.type}",
              form: f,
              question: form.question,
            )
          end
        )
        concat(
          capture do
            render(
              "registration_wizard/shared/questions/#{form.question2.type}",
              form: f,
              question: form.question2,
            )
          end
        )

        concat(
          capture do
            render("registration_wizard/shared/additional_info")
          end
        )
        concat(
          capture do
            render(
              "registration_wizard/shared/questions/#{form.question3.type}",
              form: f,
              question: form.question3,
            )
          end
        )

        capture do
          render(
            "registration_wizard/shared/questions/#{form.question4.type}",
            form: f,
            question: form.question4,
          )
        end
      %>
      <% else %>
        <%=
          render(
            "registration_wizard/shared/questions/#{form.question.type}",
            form: f,
            question: form.question,
          )
        %>
      <% end %>
      <%= f.govuk_submit %>
    <% end %>
  </div>
</div>
