<% content_for :title do %>
  <%= @form.errors.present? ? "Error: " : nil %>Resend verification email
<% end %>

<% content_for :before_content do %>
  <%= render GovukComponent::BackLinkComponent.new(
    text: "Back",
    href: registration_wizard_show_path(@wizard.previous_step_path)
  ) %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_with model: @form, url: registration_wizard_form_url(@form), scope: 'registration_wizard', method: :patch do |f| %>
      <%= f.govuk_error_summary %>

      <h1 class="govuk-heading-xl">Resend verification email</h1>

      <p class="govuk-body">
        A verification email was sent to <%= @form.email %>
      </p>

      <p class="govuk-body">
        If this email is incorrect then you can change it below.
      </p>

      <%= f.govuk_email_field :email, width: 20, label: { text: 'Email address' } %>

      <%= f.govuk_submit do %>
        <%= govuk_link_to "Cancel", registration_wizard_show_path(@wizard.previous_step_path), class: "govuk-link--no-visited-state" %>
      <% end %>
    <% end %>
  </div>
</div>
