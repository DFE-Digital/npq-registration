<% content_for :title do %>
  <%= @form.errors.present? ? "Error: " : nil %>Are you in the first two years of a headship?
<% end %>

<% content_for :before_content do %>
  <%= render GovukComponent::BackLink.new(
    text: "Back",
    href: registration_wizard_show_path(@wizard.previous_step_path)
  ) %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_with model: @form, url: registration_wizard_form_url(@form), scope: 'registration_wizard', method: :patch do |f| %>
      <%= f.govuk_error_summary %>

      <h1 class="govuk-heading-xl">How long have you been a headteacher?</h1>
      <p class="govuk-body">If you're in the first two years of a headship, you may get government funding for your NPQH.</p>

      <%= f.govuk_collection_radio_buttons :headteacher_status,
        @form.options,
        :value,
        :text,
        legend: { text: 'Are you in the first two years of a headship?' } %>

      <%= f.govuk_submit %>
    <% end %>
  </div>
</div>
