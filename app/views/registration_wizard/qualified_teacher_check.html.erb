<% content_for :before_content do %>
  <%= render GovukComponent::BackLink.new(
    text: "Back",
    href: registration_wizard_show_path(@wizard.previous_step_path)
  ) %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_with model: @form, url: registration_wizard_update_path, scope: 'registration_wizard', method: :patch do |f| %>
      <%= f.govuk_error_summary %>

      <h1 class="govuk-heading-xl">Qualified teacher check</h1>

      <p class="govuk-body">
        We need to check your teacher details on the Database of Qualified Teachers (DQT) to ensure you qualify to study for a National Professional Qualification (NPQ).
      </p>

      <%= f.govuk_text_field :trn,
        width: 10,
        label: { text: "Teacher reference number (TRN)" },
        hint: { text: "Your TRN is 7-10 characters long. It may include “/” or “RP”." } %>

      <%= f.govuk_text_field :full_name,
        width: "three-quarters",
        label: { text: "Full name" },
        hint: { text: "Your full name exactly as it appears on the DQT" } %>

      <%= f.govuk_date_field :date_of_birth,
        date_of_birth: true,
        legend: { text: "Date of birth" },
        hint: { text: "For example, 31 3 1980" } %>

      <%= f.govuk_text_field :national_insurance_number,
        width: 10,
        label: { text: "National Insurance number (optional)" } %>

      <%= f.govuk_submit %>
    <% end %>
  </div>
</div>
