<% content_for :before_content do %>
  <%= render GovukComponent::BackLink.new(
    text: "Back",
    href: registration_wizard_show_path(@wizard.previous_step_path)
  ) %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_with model: @form, url: registration_wizard_update_path, scope: 'registration_wizard', method: :patch do |f| %>
      <%= f.govuk_error_summary %>

      <%= f.govuk_check_boxes_fieldset :can_share_choices,
        multiple: false,
        legend: {
          text: "Share choices with training provider",
          size: "xl",
          tag: "h1"
        } do %>

      <p class="govuk-body">You must share your NPQ choice(s) with your training provider.</p>

      <p class="govuk-body">If you don't share the details you cannot progress with your NPQ.</p>

      <%= f.govuk_check_box :can_share_choices,
        "1",
        "0",
        multiple: false,
        required: true,
        link_errors: true,
        label: { text: "I agree my choices can be shared with my training provider" } %>
      <% end %>

      <%= f.govuk_submit %>
    <% end %>
  </div>
</div>
