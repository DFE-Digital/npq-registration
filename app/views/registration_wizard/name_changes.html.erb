<% content_for :before_content do %>
  <%= render GovukComponent::BackLink.new(
    text: "Back",
    href: registration_wizard_show_path(@wizard.previous_step_path)
  ) %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_with model: @form, url: registration_wizard_form_url(@form), scope: 'registration_wizard', method: :patch do |f| %>
      <%= f.govuk_error_summary %>

      <h1 class="govuk-heading-xl">Name changes</h1>

      <p class="govuk-body">Your name must match the name held in the Teaching Regulation Agency records to confirm you can take an NPQ.</p>

      <p class="govuk-body">If it doesn't match, you cannot continue with an NPQ.</p>

      <%= f.govuk_radio_buttons_fieldset(:changed_name, legend: { text: "Has your name changed since you became a qualified teacher?" } ) do %>
        <%= f.govuk_radio_button :changed_name, "yes", label: { text: "Yes, I have changed my name" }, link_errors: true %>
        <%= f.govuk_radio_button :changed_name, "no", label: { text: "No, I have the same name" } %>
      <% end %>

      <%= f.govuk_submit %>
    <% end %>
  </div>
</div>
