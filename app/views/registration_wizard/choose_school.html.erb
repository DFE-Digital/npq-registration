<%= content_for :before_submit do %>
  <%= govuk_details(summary_text: "My workplace is not listed") do %>
    <p>Check the following:</p>

    <ul class="govuk-list govuk-list--bullet">
      <li>the postcode or URN – <%= external_link_to "make sure it’s correct", :gias_establishment_search, new_tab: true %></li>
      <li>the spelling – try entering part of the name</li>
      <li>your browser settings – JavaScript must be enabled</li>
    </ul>

    <p>
      If your workplace is still not listed,
      <%= govuk_mail_to "continuing-professional-development@digital.education.gov.uk", "contact us", target: "_blank" %>
      for support.
    </p>
  <% end %>
<% end %>

<%=
  render(
    'registration_wizard/shared/questions_page',
    form: @form,
    wizard: @wizard,
  )
%>
