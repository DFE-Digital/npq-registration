<% content_for :before_content do %>
  <%= render GovukComponent::BackLink.new(
    text: "Back",
    href: registration_wizard_show_path(@wizard.previous_step_path)
  ) %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_with model: @form, url: registration_wizard_form_url(@form), scope: 'registration_wizard', method: :patch do |f| %>
      <%= f.govuk_error_summary %>

      <h1 class="govuk-heading-xl">Your delivery partner</h1>

      <p class="govuk-body">Your delivery partner will be running your NPQ course.</p>

      <%= f.govuk_radio_buttons_fieldset(:delivery_partner_knowledge, legend: { text: "Do you know which partner #{@form.lead_provider.name} is using?" } ) do %>
        <%= f.govuk_radio_button :delivery_partner_knowledge, "yes", label: { text: "Yes, I know which delivery partner will be used" }, link_errors: true %>
        <%= f.govuk_radio_button :delivery_partner_knowledge, "no", label: { text: "No, I don't know which partner is being used" } %>
      <% end %>

      <%= f.govuk_submit %>
    <% end %>
  </div>
</div>
