<%=
  render(
    'registration_wizard/shared/copy_page',
    form: @form,
    wizard: @wizard,
    ) do
%>
  <h1 class="govuk-heading-xl" >Funding elgibility</h1>

  <p class="govuk-body">
    You're not elgible for the scholarship funding for the <%= localise_sentence_embedded_course_name(Course.ehco.first) %>
  </p>

  <p class="govuk-body">
    This means that you would need to pay for the EHCO another way
  </p>

  <%= govuk_button_link_to "Continue", registration_wizard_show_path(@wizard.next_step_path) %>
<% end %>
