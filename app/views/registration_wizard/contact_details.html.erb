<% content_for :before_content do %>
  <%= render GovukComponent::BackLink.new(
    text: "Back",
    href: registration_wizard_show_path(@wizard.previous_step_path)
  ) %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <%= form_with model: @form, url: registration_wizard_form_url(@form), scope: 'registration_wizard', method: :patch do |f| %>
      <%= f.govuk_error_summary %>

      <h1 class="govuk-heading-xl">Contact details</h1>

      <p class="govuk-body">We need this to create an account and send you information about the NPQ.</p>

      <p class="govuk-body">Already got an account? <%= govuk_link_to "Sign in", sign_in_path %> to continue.</p>

      <%= f.govuk_email_field :email,
                              width: 20,
                              label: { text: 'Email address' } %>

      <%= f.govuk_submit %>
    <% end %>
  </div>
</div>
