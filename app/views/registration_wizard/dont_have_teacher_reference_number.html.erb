<% content_for :before_content do %>
  <%= render GovukComponent::BackLink.new(
    text: "Back",
    href: registration_wizard_show_path(@wizard.previous_step_path)
  ) %>
<% end %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-xl">Get a Teacher Reference Number (TRN)</h1>

    <p class="govuk-body">Government rules mean in order to teach at a school in England you must have a TRN number.</p>

    <h2 class="govuk-heading-m">Request a TRN by email</h2>

    <p class="govuk-body">Send an email to <%= govuk_mail_to('qts.enquiries@education.gov.uk', "qts.enquiries@education.gov.uk") %> which includes your:</p>

    <ul class="govuk-list govuk-list--bullet">
      <li>full name</li>
      <li>date of birth</li>
      <li>National Insurance number</li>
    </ul>
  </div>
</div>
