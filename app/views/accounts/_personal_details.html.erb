<%= govuk_summary_card(title: "Personal details") do |card|

card.with_summary_list(rows: [
    {
      key: { text: "Name" },
      value: { text: user.full_name }
    },
    {
      key: { text: "Email" },
      value: { text: user.email },
    },
    {
      key: { text: "Date of Birth" },
      value: { text: user.date_of_birth },
    },
  ])

end %>

