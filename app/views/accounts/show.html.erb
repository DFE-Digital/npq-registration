
<h1 class="govuk-heading-xl"><%= title ||= t(".title") %></h1>

<%= render "personal_details", user: current_user %>

<% if current_user.applications.count == 1 %>
  <% application = current_user.applications.last %>

  <%= render "work_details", application: application %>
  <%= render "course_details", application: application %>
  <%= render "provider_details", application: application %>

  <h2 class="govuk-heading-m"><%= application.course.name %></h2>

  <%=
    govuk_table do |table|
      table.with_head do |head|
        head.with_row do |row|
          row.with_cell(header: true, text: "Created at")
          row.with_cell(header: true, text: "Status")
          row.with_cell(header: true, text: "Lead provider")
        end
      end

      table.with_body do |body|
        current_user.applications.each do |application|
          body.with_row do |row|
            row.with_cell(text: application.created_at)
            row.with_cell(text: 'pending')
            row.with_cell(text: application.lead_provider.name)
            row.with_cell(text: govuk_link_to(application.user.full_name, admin_npq_applications_edge_case_path(application)))
          end
        end
      end
    end
  %>
<% else %>


  <% courses = current_user.applications.map { |app| app.course } %>

  <% courses.each do |course| %>
    <%= render "application_table", course: course %>
  <% end %>
<% end %>


<h1 class="govuk-heading-l">Register for an NPQ</h1>

<p class="govuk-heading-l">User this service to submit a new registration</p>


<%= govuk_start_button(text: "Register for an NPQ", href: "#") %>
