<% application_count = current_user.applications.count %>

<% if application_count == 1 %>
  <h2 class="govuk-heading-xl"><%= title ||= t(".title") %></h2>
<% else %>
  <h2 class="govuk-heading-xl"><%= title ||= t(".pural_title") %></h2>
<% end %>

<% if application_count == 1 %>
  <% application = current_user.applications.last %>

  <%= render "work_details", application: application %>
  <%= render "course_details", application: application %>

<% else %>
  <% courses = current_user.applications.map { |app| app.course }.uniq %>

  <% courses.each do |course| %>
    <%= render "application_table", course: course %>
  <% end %>
<% end %>

<%= render partial: 'registration_wizard/shared/register_for_an_npq' %>
