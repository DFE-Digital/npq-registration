<h2 class="govuk-heading-m"><%= course.name %></h2>
  <%=
    govuk_table do |table|
      table.with_head do |head|
        head.with_row do |row|
          row.with_cell(header: true, text: "Created at")
          row.with_cell(header: true, text: "Status")
          row.with_cell(header: true, text: "Lead provider")
        end
      end

      table.with_body do |body|
        current_user.applications.where(course: course).each do |application|
          body.with_row do |row|
            row.with_cell(text: application.created_at)
            row.with_cell(text: 'pending')
            row.with_cell(text: application.lead_provider.name)
          end
        end
      end
    end
  %>
