<% link = pagy_link_proc(pagy) -%>

<nav aria-label="pager" class="pagy_nav pagination govuk-body" role="navigation">
  <% if pagy.prev -%>
    <span class="page prev">
      <%== link.call(pagy.prev, pagy_t('pagy.nav.prev'), 'aria-label="previous"') %>
    </span>
  <% end -%>

  <%# series example: [1, :gap, 7, 8, "9", 10, 11, :gap, 36] %>
  <% pagy.series.each do |item| -%>
    <% if item.is_a?(Integer) -%>
      <span class="page"><%== link.call(item) %></span>
    <% elsif item.is_a?(String) -%>
      <span class="page current"><%= item %></span>
    <% elsif item == :gap -%>
      <span class="page gap"><%== pagy_t('pagy.nav.gap') %></span>
    <% end -%>
  <% end -%>

  <% if pagy.next -%>
    <span class="page next">
      <%== link.call(pagy.next, pagy_t('pagy.nav.next'), 'aria-label="next"') %>
    </span>
  <% end -%>
</nav>
